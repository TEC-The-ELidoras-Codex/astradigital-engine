# AstraDigital Engine - Environment Variables
# IMPORTANT: Copy this file to .env and fill in your credentials
# NEVER commit the .env file to GitHub

# API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key

# WordPress Configuration
WP_SITE_URL=https://elidorascodex.com
WP_USERNAME=your_wordpress_username
WP_PASSWORD=your_app_password_with_spaces

# Email Configuration
EMAIL_SMTP_SERVER=smtp.your_provider.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email_address
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Your_Name <your_email@domain.com>

# Development Settings
DEBUG_MODE=true
